## bash completion for make-aspkg
##

_make-aspkg() {

    local cur prev opts
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"
    opts="--help --version"

    if [[ ${cur} == -* ]] ; then
        COMPREPLY=( $(compgen -W "${opts}" -- ${cur}) )
        return 0
    else
        COMPREPLY=( $(compgen -o plusdirs -f -X '!*.zip' -- ${cur}) )
        return 0
    fi
}

complete -o filenames -F _make-aspkg make-aspkg
